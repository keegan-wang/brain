# CortexCam v0.1 - Example environment variables
# Copy to .env and adjust as needed

# Optional: API key enables OpenAI mapping path (still stubbed in this scaffold)
OPENAI_API_KEY=

# SQLite by default; replace with Postgres URL if desired
# e.g., postgresql+psycopg://user:pass@localhost:5432/cortexcam
DATABASE_URL=sqlite:///./cortexcam.db
# OpenAI
OPENAI_API_KEY=
CORTEXCAM_OPENAI_MODEL=gpt-4o-mini

# Privacy mode: privacy-max | hybrid | air-gap
CORTEXCAM_PRIVACY_MODE=privacy-max

## Vision (BLIP-only)
# Enable BLIP captioning (defaults to 1); set to 0 to disable
CORTEXCAM_HF_ENABLE=1
# BLIP model (can be HF hub id or local path)
CORTEXCAM_HF_CAPTION_MODEL=Salesforce/blip-image-captioning-base

# Torch device selection for transformers pipelines (cpu|cuda|mps)
CORTEXCAM_TORCH_DEVICE=cpu
